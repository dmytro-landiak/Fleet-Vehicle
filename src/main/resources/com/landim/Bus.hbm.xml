<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.landim.entity.Bus" table="bus">
        <meta attribute="class-description">
            This class contains the bus details.
        </meta>
        <id name="busID" type="int" column="BUS_ID">
            <generator class="native"/>
        </id>
        <property name="type" column="TYPE" type="string"/>
        <property name="capacity" column="CAPACITY" type="int"/>
        <property name="registPlate" column="REGIST_PLATE" type="string"/>
    </class>
</hibernate-mapping>